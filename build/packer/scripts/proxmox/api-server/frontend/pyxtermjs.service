[Unit]
Description=pyxtermjs terminal emulator service
After=network.target

[Service]
WorkingDirectory=/home/vagrant/.local/bin/pyxtermjs
ExecStart=/usr/bin/gunicorn --bind 0.0.0.0:5000 app:app --worker-class eventlet -w 1

Restart=always
RestartSec=5
KillSignal=SIGINT
TimeoutStopSec=15
SyslogIdentifier=CRpyxtermjs
StandardOutput=syslog
StandardError=syslog

[Install]
WantedBy=multi-user.target